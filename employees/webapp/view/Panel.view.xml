<mvc:View controllerName="hcm.employees.controller.Panel"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">

    <Panel  id="panel1"
            headerText="{i18n>helloPanel}"
            expandable="true"
            expanded="true">
        <content>
            <Button id="Button1"
                    text="{i18n>text1}"
                    press="onShowHello"
                    icon="sap-icon://add-employee"
                    type="Reject"/>
            <Input  class="sapUiSmallMarginBegin"
                    id="input1"
                    width="60%"
                    value="{view>/employee/name}"
                    description="Hello {view>/employee/name}"
                    valueLiveUpdate="true"/>
            <Text   id="text1"
                    text="prueba texto sin i18n para clase CSS personalizada"
                    class="boldElements"/>
        </content>
    </Panel>

</mvc:View>